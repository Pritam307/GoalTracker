<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardElevation="10dp"
        android:padding="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/card_design"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/goalname_lay"
                android:layout_width="match_parent"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:text="Goal :"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="85"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:hint="your goal not set"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/startdate_lay"
                android:layout_below="@id/goalname_lay"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="100">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Starts In:"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp" />

                <TextView
                    android:id="@+id/sd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:hint="starting date not set"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/enddate_lay"
                android:layout_below="@id/startdate_lay"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:text="End In:"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:textColor="#fff"
                    android:hint="ending date not set"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_lay"
                android:layout_below="@id/enddate_lay"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="85"
                    android:textColor="#fff"
                    android:hint="status not set"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>